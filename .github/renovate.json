{
  "extends": [
    "config:best-practices",
    ":disableRateLimiting"
  ],
  "automerge": false,
  "automergeType": "pr",
  "packageRules": [
    {
      "matchManagers": ["github-actions", "pip_requirements"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["custom.regex", "ansible-galaxy"],
      "automerge": false
    }
  ],
  "enabledManagers": [
    "github-actions",
    "pip_requirements",
    "custom.regex",
    "ansible-galaxy"
  ],
  "ansible-galaxy": {
    "managerFilePatterns": [
      "/^requirements\\.ya?ml$/"
    ]
  },
  "assignees": [
    "pluggero"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^defaults/main\\.yml$/"
      ],
      "matchStrings": [
        "golang_version:\\s+\"(?<currentValue>[\\d\\.]+)\""
      ],
      "datasourceTemplate": "custom.golang-version",
      "depNameTemplate": "golang-version",
      "versioningTemplate": "semver"
    }
  ],
  "customDatasources": {
    "golang-version": {
      "defaultRegistryUrlTemplate": "https://go.dev/dl/?mode=json&include=all",
      "format": "json",
      "transformTemplates": [
        "{ \"releases\": $map($filter($, function($v) { $v.stable = true }), function($v) { { \"version\": $substringAfter($v.version, \"go\") } }) }"
      ]
    }
  }
}
